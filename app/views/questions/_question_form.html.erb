<%= form_for(@question) do |f| %>
  <div class="field">
    <%= f.label :asker %><br />
    <%= f.text_field :asker %>
  </div>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_field :body %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
